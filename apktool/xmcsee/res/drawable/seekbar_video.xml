<?xml version="1.0" encoding="utf-8"?>
<layer-list>
    <item n1:id="@android:id/background"
      xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape>
            <corners n1:radius="1.0dip" />
            <gradient n1:startColor="@color/line_color" n1:endColor="@color/line_color" n1:centerColor="@color/line_color" />
        </shape>
    </item>
    <item n2:id="@android:id/secondaryProgress"
      xmlns:n2="http://schemas.android.com/apk/res/android">
        <clip>
            <shape>
                <corners n2:radius="2.0dip" />
                <gradient n2:startColor="@color/theme_color" n2:endColor="@color/seekbar_video_color" />
            </shape>
        </clip>
    </item>
    <item n3:id="@android:id/progress"
      xmlns:n3="http://schemas.android.com/apk/res/android">
        <clip>
            <shape>
                <corners n3:radius="1.0dip" />
                <gradient n3:startColor="@color/theme_color" n3:endColor="@color/seekbar_video_color" />
            </shape>
        </clip>
    </item>
</layer-list>