<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item n1:state_pressed="true"
      xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape n1:shape="rectangle">
            <stroke n1:width="2.0px" n1:color="@color/theme_color" />
            <corners n1:radius="5.0dip" />
        </shape>
    </item>
    <item n2:state_selected="true"
      xmlns:n2="http://schemas.android.com/apk/res/android">
        <shape n2:shape="rectangle">
            <stroke n2:width="2.0px" n2:color="@color/theme_color" />
            <corners n2:radius="5.0dip" />
        </shape>
    </item>
    <item>
        <shape n3:shape="rectangle"
          xmlns:n3="http://schemas.android.com/apk/res/android">
            <stroke n3:width="2.0px" n3:color="@color/whitebg_text" />
            <corners n3:radius="5.0dip" />
        </shape>
    </item>
</selector>