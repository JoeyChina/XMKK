<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item n1:state_enabled="false"
      xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape n1:shape="rectangle">
            <solid n1:color="@color/light_gray" />
            <corners n1:radius="5.0dip" />
        </shape>
    </item>
    <item n2:state_selected="true"
      xmlns:n2="http://schemas.android.com/apk/res/android">
        <shape n2:shape="rectangle">
            <solid n2:color="@color/theme_color" />
            <corners n2:radius="5.0dip" />
        </shape>
    </item>
    <item n3:state_pressed="true"
      xmlns:n3="http://schemas.android.com/apk/res/android">
        <shape n3:shape="rectangle">
            <solid n3:color="@color/theme_color" />
            <corners n3:radius="5.0dip" />
        </shape>
    </item>
    <item>
        <shape n4:shape="rectangle"
          xmlns:n4="http://schemas.android.com/apk/res/android">
            <stroke n4:width="2.0px" n4:color="@color/theme_color" />
            <corners n4:radius="5.0dip" />
        </shape>
    </item>
</selector>